  late ChatController _chatController;

  @override
  void initState() {
    super.initState();

    _chatController = ChatController(
      initialMessageList: [],
      scrollController: ScrollController(),
      chatUsers: [],
    );

    _chatController.scrollController.addListener(() async {
      final position = _chatController.scrollController.position;
      if (position.pixels == position.maxScrollExtent) {}
      print(position.pixels);
    });
  }